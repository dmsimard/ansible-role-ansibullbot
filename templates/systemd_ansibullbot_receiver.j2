[Unit]
Description=Ansibullbot Receiver
After=syslog.target

[Service]
Type=simple
User={{ ansibullbot_user }}
Group={{ ansibullbot_group }}

Restart=on-failure

ExecStart={{ ansibullbot_venv_dir }}/bin/python {{ ansibullbot_receiver_bin_path }}
WorkingDirectory={{ ansibullbot_clone_path }}

[Install]
WantedBy=multi-user.target
